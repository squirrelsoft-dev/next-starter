{
  "name": "next-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "wrangler pages dev --compatibility-date=2024-01-01 --proxy 3000 -- npm run dev:next",
    "dev:next": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "postinstall": "node scripts/check-setup.js",
    "db:generate": "prisma generate",
    "db:migrate:create": "wrangler d1 migrations create DB",
    "db:migrate:diff": "prisma migrate diff --from-empty --to-schema-datamodel prisma/schema.prisma --script",
    "db:migrate:diff:local": "prisma migrate diff --from-local-d1 --to-schema-datamodel prisma/schema.prisma --script",
    "db:migrate:apply:local": "wrangler d1 migrations apply DB --local",
    "db:migrate:apply:remote": "wrangler d1 migrations apply DB --remote",
    "db:studio": "prisma studio",
    "db:format": "prisma format"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@prisma/adapter-d1": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@simplewebauthn/browser": "^9.0.1",
    "@simplewebauthn/server": "^9.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.556.0",
    "next": "^16.0.8",
    "next-auth": "^5.0.0-beta.30",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^24.10.2",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "^16.0.8",
    "prisma": "^7.1.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "wrangler": "^3.101.0"
  }
