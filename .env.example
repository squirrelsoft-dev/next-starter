# Database
# Microsoft SQL Server connection string
# Format: sqlserver://HOST:PORT;database=DATABASE;user=USER;password=PASSWORD;encrypt=true
# For local development:
# DATABASE_URL="sqlserver://localhost:1433;database=next_starter;user=sa;password=YourStrong!Passw0rd;encrypt=true;trustServerCertificate=true"
# For Azure SQL:
# DATABASE_URL="sqlserver://your-server.database.windows.net:1433;database=next_starter;user=your_user;password=your_password;encrypt=true"
DATABASE_URL="sqlserver://localhost:1433;database=next_starter;user=sa;password=YourStrong!Passw0rd;encrypt=true;trustServerCertificate=true"

# Auth.js v5 Configuration
# Generate a secret with: openssl rand -base64 32
# Or online: https://generate-secret.vercel.app/32
AUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# Application URL
# Change this to your production URL when deploying
NEXTAUTH_URL="http://localhost:3000"

# WebAuthn Configuration (Passkeys)
# For local development, use localhost. For production, use your domain.
# Example production: https://yourdomain.com
RP_ID="localhost"
RP_NAME="Next.js Starter with Passkeys"
RP_ORIGIN="http://localhost:3000"
