# Cloudflare D1 Configuration
# For local development, D1 is accessed via wrangler dev
# For production, the D1 database is bound in wrangler.toml

# Create your D1 database: wrangler d1 create next-starter-db
# Then bind it in your wrangler.toml file:
# [[d1_databases]]
# binding = "DB"
# database_name = "next-starter-db"
# database_id = "your-database-id"

# Auth.js v5 Configuration
# Generate a secret with: openssl rand -base64 32
# Or online: https://generate-secret.vercel.app/32
AUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# Application URL
# Change this to your production URL when deploying
NEXTAUTH_URL="http://localhost:3000"

# WebAuthn Configuration (Passkeys)
# For local development, use localhost. For production, use your domain.
# Example production: https://yourdomain.com
RP_ID="localhost"
RP_NAME="Next.js Starter with Passkeys"
RP_ORIGIN="http://localhost:3000"
